{
  "name": "pr-notes",
  "displayName": "pr-notes",
  "description": "Create github pr review comments using your voice",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pr-notes.showMenu",
        "title": "Show Recording Menu",
        "icon": "$(mic)"
      },
      {
        "command": "pr-notes.startRecording",
        "title": "Start Recording"
      },
      {
        "command": "pr-notes.stopRecording",
        "title": "Stop Recording"
      },
      {
        "command": "pr-notes.login",
        "title": "Sign in with GitHub",
        "category": "PR Notes"
      },
      {
        "command": "pr-notes.downloadModels",
        "title": "Download Speech Models",
        "category": "PR Notes"
      },
      {
        "command": "pr-notes.setGeminiApiKey",
        "title": "Set Gemini API Key",
        "category": "PR Notes"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pr-notes",
          "title": "PR Notes",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "pr-notes": [
        {
          "type": "webview",
          "id": "pr-notes.transcriptPanel",
          "name": "Live Transcript"
        },
        {
          "type": "webview",
          "id": "pr-notes.approvalsPanel",
          "name": "Pending comments"
        }
      ]
    },
    "configuration": {
      "title": "PR Notes",
      "properties": {
        "pr-notes.inputDevice": {
          "type": "string",
          "default": "default",
          "description": "Selected audio input device ID for recording. Use 'default' for system default device."
        },
        "pr-notes.postToGitHub": {
          "type": "boolean",
          "default": true,
          "description": "When true, post PR review comments to GitHub (when signed in and on a PR branch). When false, only create local VS Code comments."
        },
        "pr-notes.owner": {
          "type": "string",
          "default": "",
          "description": "Override GitHub repo owner (e.g. 'octocat'). When set with repo and pullNumber, used instead of git remote discovery."
        },
        "pr-notes.repo": {
          "type": "string",
          "default": "",
          "description": "Override GitHub repo name (e.g. 'my-repo'). When set with owner and pullNumber, used instead of git remote discovery."
        },
        "pr-notes.pullNumber": {
          "type": "number",
          "default": 0,
          "description": "Override PR number. When set with owner and repo, used instead of resolving PR from current branch."
        }
      }
    }
  },
  "scripts": {
    "build:helper": "./scripts/build-helper.sh",
    "vscode:prepublish": "pnpm run build:helper && pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "format": "prettier --write \"**/*.{ts,tsx,json,css,md,mdx,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,css,md,mdx,yaml,yml}\""
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "prettier": "^3.8.1"
  }
}
